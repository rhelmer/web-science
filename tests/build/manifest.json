{
  "description": "A build test for the WebScience library.",
  "author": "Mozilla",
  "manifest_version": 2,
  "name": "WebScience Build Test",
  "version": "1.0.0",
  "homepage_url": "https://github.com/mozilla-rally/web-science",
  "background": {
    "scripts": [
      "dist/browser-polyfill.min.js",
      "dist/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/browser-polyfill.min.js",
        "dist/webScience/pageManager.content.js",
        "dist/webScience/pageNavigation.content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "incognito": "not_allowed",
  "permissions": [
    "<all_urls>",
    "unlimitedStorage",
    "webRequest",
    "webNavigation",
    "idle"
  ]
}